import streamlit as st
import pandas as pd
import joblib

# Load trained model
model = joblib.load("credit_fraud.pkl")

st.set_page_config(page_title="Credit Card Fraud Detection", page_icon="ğŸ’³", layout="centered")

st.title("ğŸ’³ Credit Card Fraud Detection App")
st.markdown("Enter transaction details below to predict if it's **fraudulent** or **legitimate**.")

# Example limited inputs (you can add all 28 V features if you like)
v1 = st.number_input("V1", value=0.0)
v2 = st.number_input("V2", value=0.0)
v3 = st.number_input("V3", value=0.0)
amount = st.number_input("Transaction Amount", value=0.0)

if st.button("Predict"):
    # Create DataFrame for prediction
    data = pd.DataFrame([[v1, v2, v3, amount]], columns=["V1", "V2", "V3", "Amount"])

    pred = model.predict(data)[0]
    if pred == 1:
        st.error("âš ï¸ This transaction is **FRAUDULENT!**")
    else:
        st.success("âœ… This transaction seems **legitimate.**")
